<Window x:Class="ST10263794_PROG6221_POE_Part3.RecipeEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Entry" Height="600" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Recipe Details" FontSize="18" Margin="0,0,0,20"/>

            <TextBlock Text="Recipe Name:"/>
            <TextBox x:Name="RecipeName"/>

            <TextBlock Text="Ingredients" FontSize="16" Margin="0,20,0,10"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="0,0,0,10"/>

            <ListBox x:Name="IngredientList"/>

            <TextBlock Text="Steps" FontSize="16" Margin="0,20,0,10"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="0,0,0,10"/>

            <ListBox x:Name="StepList">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

