<Window x:Class="ST10263794_PROG6221_POE_Part3.StepEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Step Entry" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Step Description" FontSize="18" Margin="0,0,0,20"/>

            <TextBox x:Name="StepDescription" Margin="0,0,0,10"/>

            <Button Content="Save Step" Click="SaveStep_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

