<Window x:Class="ST10263794_PROG6221_POE_Part3.IngredientEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingredient Entry" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Ingredient Details" FontSize="18" Margin="0,0,0,20"/>

            <TextBlock Text="Ingredient Name:"/>
            <TextBox x:Name="IngredientName"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="IngredientQuantity"/>

            <TextBlock Text="Unit:"/>
            <ComboBox x:Name="IngredientUnit">
                <ComboBoxItem Content="Teaspoons"/>
                <ComboBoxItem Content="Tablespoons"/>
                <ComboBoxItem Content="Cups"/>
                <ComboBoxItem Content="Grams"/>
                <ComboBoxItem Content="Milliliters"/>
            </ComboBox>

            <TextBlock Text="Calories:"/>
            <TextBox x:Name="IngredientCalories"/>

            <TextBlock Text="Food Group:"/>
            <ComboBox x:Name="IngredientFoodGroup"/>

            <Button Content="Save Ingredient" Click="SaveIngredient_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

